@model CharacterCreator.Models.Post

@ViewBag.ErrorMessage

<form asp-action="NewPost" asp-controller="Post" method="post">
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <span asp-validation-for="Title"></span>
        <input asp-for="Title" class="form-control p-3" required /><br />
    </div>
    <div class="form-group">
        <label asp-for="Text">Text:</label>
        <span asp-validation-for="Text"></span>
        <input asp-for="Text" class="form-control p-3" rows="3" required /><br />
    </div>
    <input type="submit" value="Submit Post" class="btn btn-danger" />
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}