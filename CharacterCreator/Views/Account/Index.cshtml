@model CharacterCreator.Models.User
<div class="text-center">
    <h1 class="display-4 ">Create An Account</h1>
    <p>
        When creating an account, you should know that there is no method to retrieve your password once lost, and your username must be unique.
    </p>
</div>

<span class="@ViewBag.Success">@ViewBag.Message</span>

<form asp-action="Index" asp-controller="Account" method="post">
    <div class="form-group">
        <label>Title:</label>
        <input asp-for="Username" class="form-control p-3" required /><br />
    </div>
    <div class="form-group">
        <label>Topic:</label>
        <input asp-for="Password" class="form-control p-3" required /><br />
    </div>
    <input type="submit" value="Create new Account" class="btn btn-info" />
</form>