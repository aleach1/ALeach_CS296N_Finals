@model CharacterCreator.Models.Character

@ViewBag.ErrorMessage

<form asp-action="NewChar" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <span asp-validation-for="Name"></span>
        <input asp-for="Name" class="form-control p-3" required /><br />
    </div>
    <div class="form-group">
        <label asp-for="Backstory">Backstory:</label>
        <span asp-validation-for="Backstory"></span>
        <input asp-for="Backstory" class="form-control p-3" rows="3" required /><br />
    </div>
    <div class="form-group">
        <label asp-for="Motivation">Motivation:</label>
        <span asp-validation-for="Motivation"></span>
        <input asp-for="Motivation" class="form-control p-3"  /><br />
    </div>
    <div class="form-group">
        <label asp-for="MoralAlignment">Moral Alignment:</label>
        <span asp-validation-for="MoralAlignment"></span>
        <input asp-for="MoralAlignment" class="form-control p-3"  /><br />
    </div>
    <div class="form-group">
        <label asp-for="Height">Height(cm):</label>
        <span asp-validation-for="Height"></span>
        <input type="number" asp-for="Height" class="form-control p-3" required /><br />
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight(kg):</label>
        <span asp-validation-for="Weight"></span>
        <input type="number" asp-for="Weight" class="form-control p-3" required /><br />
    </div>
    <div class="form-group">
        <label asp-for="PhysicalDescription">Physical Description:</label>
        <span asp-validation-for="PhysicalDescription"></span>
        <input asp-for="PhysicalDescription" class="form-control p-3"  /><br />
    </div>
    <input type="submit" value="Submit Character" class="btn btn-danger" />
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}